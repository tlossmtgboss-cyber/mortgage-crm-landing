# Database Configuration
# For PostgreSQL (recommended)
DATABASE_URL=postgresql://postgres:password@localhost:5432/agentic_crm

# For SQLite (development only)
# DATABASE_URL=sqlite:///./agentic_crm.db

# Security
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (Required for AI Assistant)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Microsoft Graph API (Required for Teams, Email, Calendar)
# Register app at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback
MICROSOFT_FROM_EMAIL=your-email@company.com

# Twilio SMS (Required for text messaging)
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
# Use EITHER Auth Token OR API Key (API Key is more secure)
TWILIO_AUTH_TOKEN=your-twilio-auth-token
# OR use API Key credentials (recommended)
TWILIO_API_KEY_SID=your-api-key-sid
TWILIO_API_KEY_SECRET=your-api-key-secret
TWILIO_PHONE_NUMBER=+1234567890

# Webhook URLs (for receiving incoming messages)
WEBHOOK_BASE_URL=https://your-domain.com  # Or ngrok URL for development

# Environment
ENVIRONMENT=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
